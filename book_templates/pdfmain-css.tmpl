[% IF bodyface -%]
@import url("[% bodyfont | uri %]-font-faces.css");
[%- END %]
[% IF monoface -%]
@import url("[% monofont | uri %]-font-faces.css");
[%- END %]
@import url("Common_Content/css/common.css");
[% IF overrides_css -%]
@import url("Common_Content/css/overrides.css");
[%- END %]
[% IF lang_css -%]
@import url("Common_Content/css/lang.css");
[%- END %]

body, h1, h2, h3, h4, h5, h6, pre, li, div {
    font-family: "[% bodyfont %]" !important;
	line-height: 1.3em !important;
}
body {
	font-size: 12px;
	line-height: 14px;
}
h1, h2, h3, h4, h5, h6 {
	margin-top: 1.5em;
	padding-bottom: 1em;
}
div.warning, div.note, div.important {
	margin-top: 1.5em;
}

p, div.para {
	margin-top: 0px;
}

div.admonition_header p {
	font-size: 14px;
}

.guibutton,
.guilabel,
.computeroutput, 
.option, 
.command,
.filename,
.keycap,
.classname,
.literal,
pre,
code {
	font-family:"[% monofont %]" !important;
}

code.email {
	font-family: "[% bodyfont %]" !important;
}

.popper {
    max-height: none;
    border-bottom: none;
}

section.chapter,
section.preface,
section.part,
section.appendix {
	page-break-before: always;
}

